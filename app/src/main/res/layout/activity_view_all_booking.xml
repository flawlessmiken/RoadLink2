<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAllBookingActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View All Booking"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_booking"
                style="@style/CustomTextView"
                android:text="Booking ID" />


            <TextView
                android:id="@+id/booking_id"
                style="@style/CustomEditText3"
                android:text="Booking ID"
                />

            <TextView
                android:id="@+id/tv_vehicle"
                style="@style/CustomTextView"
                android:text="Vehicle ID" />

            <TextView
                android:id="@+id/vehicleID"
                style="@style/CustomEditText3"
                android:text="Vehicle ID"
                />

            <TextView
                android:id="@+id/tv_trip_distance"
                style="@style/CustomTextView"
                android:text="Trip Distance" />


            <TextView
                android:id="@+id/tripDistance"
                style="@style/CustomEditText3"
                android:text="50 km"/>

            <TextView
                android:id="@+id/tv_has_return"
                style="@style/CustomTextView"
                android:text="Has Return" />

            <TextView
                android:id="@+id/HasReturn"
                style="@style/CustomEditText3"
                android:text="YES" />


            <TextView
                android:id="@+id/tv_cost"
                style="@style/CustomTextView"
                android:text="Calculated Cost" />


            <TextView
                android:id="@+id/calculatedCost"
                style="@style/CustomEditText3"
                android:text="#500.00" />

            <TextView
                android:id="@+id/tv_booking_status"
                style="@style/CustomTextView"
                android:text="Booking Status" />

            <TextView
                android:id="@+id/bookingStatus"
                style="@style/CustomEditText3"
                android:text="Status" />

            <TextView
                android:id="@+id/tv_payment_status"
                style="@style/CustomTextView"
                android:text="Payment Status" />


            <TextView
                android:id="@+id/paymentStatus"
                style="@style/CustomEditText3"
                android:text="Paid" />

            <TextView
                android:id="@+id/tv_paid_amount"
                style="@style/CustomTextView"
                android:text="Paid Amount" />

            <TextView
                android:id="@+id/paidAmount"
                style="@style/CustomEditText3"
                android:text="#500.00"/>

            <TextView
                android:id="@+id/tv_departure_time"
                style="@style/CustomTextView"
                android:text="Departure Time" />


            <TextView
                android:id="@+id/departureTime"
                style="@style/CustomEditText3"
                android:text="8:00 Am"/>

            <TextView
                android:id="@+id/tv_booking_date"
                style="@style/CustomTextView"
                android:text="Booking Date" />

            <TextView
                android:id="@+id/bookingDate"
                style="@style/CustomEditText3"
                android:text="Nov. 2nd, 2020"/>

            <TextView
                android:id="@+id/tv_arrival_time"
                style="@style/CustomTextView"
                android:text="Arrival Time" />

            <TextView
                android:id="@+id/arrivalTime"
                style="@style/CustomEditText3"
                android:text="5:00 Pm" />

            <TextView
                android:id="@+id/tv_customer_id"
                style="@style/CustomTextView"
                android:text="Customer ID" />

            <TextView
                android:id="@+id/customerID"
                style="@style/CustomEditText3"
                android:text="John123"/>

            <TextView
                android:id="@+id/tv_location"
                style="@style/CustomTextView"
                android:text="Location" />

            <TextView
                android:id="@+id/location"
                style="@style/CustomEditText3"
                android:text="Enugu North" />

            <TextView
                android:id="@+id/tv_destination"
                style="@style/CustomTextView"
                android:text="Destination" />

            <TextView
                android:id="@+id/destination"
                style="@style/CustomEditText3"
                android:text="Enugu South" />

            <TextView
                android:id="@+id/tv_number_passenger"
                style="@style/CustomTextView"
                android:text="Number of Passenger" />

            <TextView
                android:id="@+id/numPassenger"
                style="@style/CustomEditText3"
                android:text="5 (Five)" />

            <TextView
                android:id="@+id/tv_locat_address"
                style="@style/CustomTextView"
                android:text="Location Address" />

            <TextView
                android:id="@+id/locationAddress"
                style="@style/CustomEditText3"
                android:text="50. Artisan Asata"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_done"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="doneBookingClicked"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:text="Done"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha=".08"
        android:src="@drawable/viewbooking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>