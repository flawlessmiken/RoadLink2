<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeBookingActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Make Booking"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_booking"
                style="@style/CustomTextView"
                android:text="Booking ID" />


            <EditText
                android:id="@+id/booking_id"
                style="@style/CustomEditText"
                android:hint="Booking ID"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_vehicle"
                style="@style/CustomTextView"
                android:text="Vehicle ID" />

            <EditText
                android:id="@+id/vehicleID"
                style="@style/CustomEditText2"
                android:hint="Vehicle ID"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_trip_distance"
                style="@style/CustomTextView"
                android:text="Trip Distance" />


            <EditText
                android:id="@+id/tripDistance"
                style="@style/CustomEditText"
                android:hint="Trip Distance"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_has_return"
                style="@style/CustomTextView"
                android:text="Has Return" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edittext_modify">
                <Spinner
                    android:id="@+id/spinner"
                    style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/has_return"
                    android:prompt="@string/has_return_prompt"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_cost"
                style="@style/CustomTextView"
                android:text="Calculated Cost" />


            <EditText
                android:id="@+id/calculatedCost"
                style="@style/CustomEditText"
                android:hint="Calculated Cost"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_booking_status"
                style="@style/CustomTextView"
                android:text="Booking Status" />

            <EditText
                android:id="@+id/bookingStatus"
                style="@style/CustomEditText2"
                android:hint="Booking Status"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_payment_status"
                style="@style/CustomTextView"
                android:text="Payment Status" />


            <EditText
                android:id="@+id/paymentStatus"
                style="@style/CustomEditText"
                android:hint="Payment Status"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_paid_amount"
                style="@style/CustomTextView"
                android:text="Paid Amount" />

            <EditText
                android:id="@+id/paidAmount"
                style="@style/CustomEditText2"
                android:hint="Paid Amount"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_departure_time"
                style="@style/CustomTextView"
                android:text="Departure Time" />


            <EditText
                android:id="@+id/departureTime"
                style="@style/CustomEditText"
                android:hint="Departure Time"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_booking_date"
                style="@style/CustomTextView"
                android:text="Booking Date" />

            <EditText
                android:id="@+id/bookingDate"
                style="@style/CustomEditText2"
                android:hint="Booking Date"
                android:inputType="date" />

            <TextView
                android:id="@+id/tv_arrival_time"
                style="@style/CustomTextView"
                android:text="Arrival Time" />

            <EditText
                android:id="@+id/arrivalTime"
                style="@style/CustomEditText"
                android:hint="Arrival Time"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_customer_id"
                style="@style/CustomTextView"
                android:text="Customer ID" />

            <EditText
                android:id="@+id/customerID"
                style="@style/CustomEditText2"
                android:hint="Customer ID"
                android:inputType="text" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/CustomTextView"
                android:text="Location" />

            <EditText
                android:id="@+id/location"
                style="@style/CustomEditText"
                android:hint="Location"
                android:inputType="text" />

            <TextView
                android:id="@+id/tv_destination"
                style="@style/CustomTextView"
                android:text="Destination" />

            <EditText
                android:id="@+id/destination"
                style="@style/CustomEditText2"
                android:hint="Destination"
                android:inputType="text" />

            <TextView
                android:id="@+id/tv_number_passenger"
                style="@style/CustomTextView"
                android:text="Number of Passenger" />

            <EditText
                android:id="@+id/numPassenger"
                style="@style/CustomEditText"
                android:hint="Number of Passenger"
                android:inputType="text" />

            <TextView
                android:id="@+id/tv_locat_address"
                style="@style/CustomTextView"
                android:text="Location Address" />

            <EditText
                android:id="@+id/locationAddress"
                style="@style/CustomEditText2"
                android:hint="Location Address"
                android:inputType="text" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_book_now"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:text="Book Now"
                 />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha=".14"
        android:src="@drawable/makebooking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>